<div class="modal-content">
  <%= form_for @album, url: {action: :create} do |f| %>
      <div class="modal-header">
        <h4 class="modal-title">Add a album</h4>
      </div>
      <div class="modal-body">
        <p>
          <%= "<div class=\"alert alert-danger\">#{@album.errors.full_messages.first}</div>".html_safe if @album.errors.any? %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <label class="control-label">albums title</label>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="col-xs-4">
              <label class="control-label">Premiere date</label>
              <%= f.date_field  :premiere_date, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-xs-12">
              <label class="control-label">Band Id</label>
              <%= f.text_field :band_id, class: "form-control" %>
            </div>
          </div>
        </div>

        </p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Back', { controller: 'albums', action: 'index'}, class: 'btn btn-default'%>
        <%= f.submit 'Create album', class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
