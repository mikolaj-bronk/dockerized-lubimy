<div class="modal-content">
  <%= form_for @band, url: {action: :update} do |f| %>
      <div class="modal-header">
        <h4 class="modal-title">Add a band</h4>
      </div>
      <div class="modal-body">
        <p>
          <%= "<div class=\"alert alert-danger\">#{@band.errors.full_messages.first}</div>".html_safe if @band.errors.any? %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <label class="control-label">Bands name</label>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="col-xs-4">
              <label class="control-label">Date created</label>
              <%= f.date_field  :date_created, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-xs-12">
              <label class="control-label">Photo</label>
              <%= f.text_field:photo, class: "form-control" %>
            </div>
          </div>
        </div>

        </p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Back', { controller: 'bands', action: 'index'}, class: 'btn btn-default'%>
        <%= f.submit 'Update band', class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
