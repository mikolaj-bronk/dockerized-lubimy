
<div class="modal-content">
  <div class="modal-header">
    <h4 class="modal-title">Songs</h4>
  </div>
  <%= form_tag(songs_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
  <div class="modal-body">
    <p>
      <div class="btn-group">
        <%= link_to 'Add Song', new_song_path, class: 'btn btn-success'%>
      </div>
    </p>
    <table id="songs" class="display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Author</th>
        <th>Album</th>
        <th>Name</th>
        <th>Length</th>
        <th>Last Modified</th>
        <th>Date Added</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
          <tr>
            <% for song in @songs %>
              <td><%= song.id_author %></td>
              <td><%= song.id_album %></td>
              <td><%= song.title %></td>
              <td><%= truncate(song.length) %></td>
              <td><%= song.updated_at %></td>
              <td><%= song.created_at %></td>
          <td>
              <div class="btn-group">
                <%= link_to 'Edit', edit_song_path(song), class: 'btn btn-success' %>
                <%= link_to 'Delete', song_path(song), method: :delete, class: 'btn btn-danger',  data:{ confirm: 'Are you sure?'} %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @songs %>
  </div>
  <%= will_paginate @songs, :container => false %>
</div>
